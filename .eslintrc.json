{
    "extends": "airbnb",
    "env": {
        "es6": true,
        "browser": true
    },
    "rules": {
        "react/jsx-filename-extension": "off",
        "implicit-arrow-linebreak": "off",
        "react/prop-types": "off"
    },
    "overrides": [
        {
            "files": [
                "*.test.js"
            ],
            "globals": {
                "it": true,
                "document": true
            }
        }
    ]
}